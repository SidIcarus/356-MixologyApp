<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/ingredientsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/drinkImage"
                android:contentDescription="Image of Drink"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:src="@drawable/ic_launcher" />

            
<!--  Probably shouldn't be a listview since it scrolls separately. Will have to instantiate something else -->

            <TextView
                android:id="@+id/view_recipe_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/view_recipe_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="TextView" />
            <TextView
                android:id="@+id/view_recipe_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="TextView" />
            <TextView
                android:id="@+id/view_recipe_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>